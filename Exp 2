/**#include <iostream>
using namespace std;

int deleteAllOccurrences(int arr[], int n, int key){
    int j = 0;
    for(int i=0;i<n;i++)
        if(arr[i] != key)
            arr[j++] = arr[i];
    return j;
}

int main(){
    int arr[100], n, key;

    cout << "Enter size: ";
    cin >> n;

    cout << "Enter elements: ";
    for(int i=0;i<n;i++) cin >> arr[i];

    cout << "Enter element to delete: ";
    cin >> key;

    n = deleteAllOccurrences(arr,n,key);

    cout << "Array after deletion: ";
    for(int i=0;i<n;i++) cout << arr[i] << " ";
}**/

