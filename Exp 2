/**#include <iostream>
using namespace std;

void frequency(int arr[], int n){
    bool vis[100] = {false};

    for(int i=0;i<n;i++){
        if(vis[i]) continue;

        int count = 1;
        for(int j=i+1;j<n;j++){
            if(arr[j] == arr[i]){
                count++;
                vis[j] = true;
            }
        }
        cout << arr[i] << " : " << count << endl;
    }
}

int main(){
    int arr[100], n;

    cout << "Enter size: ";
    cin >> n;

    cout << "Enter elements: ";
    for(int i=0;i<n;i++) cin >> arr[i];

    cout << "Frequencies:\n";
    frequency(arr,n);
}
